@model IEnumerable<USWalks.WebApp.Models.DTO.RegionDTO>
@{
}

<h1>Regions</h1>
<div class="d-flex justify-content-end">
    <a class="btn btn-secondary" asp-controller="Regions" asp-action="Add">Add Region</a>
</div>
    <table class="table-bordered">
        <thead>
        <tr>
            <th>Id</th>
            <th>Code</th>
            <th>Name</th>
            <th> </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
          <tr>
              <td>@item.Id</td>
              <td>@item.Code</td>
              <td>@item.Name</td>
                <td>
                    <a asp-controller="Regions" asp-action="Edit" asp-route-id="@item.Id"

                    class="btn btn-light">Edit</a>
                </td>
          </tr>  
        }
    </tbody>
    </table>

